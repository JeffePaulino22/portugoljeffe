Algoritmo "pares_consecutivos_28"

Var

   x , soma :inteiro

Inicio
   escreva("digite o numero inteiro :")
   leia(x)
   
   enquanto x <> 0 faca

   
      se x mod 2 <> 0 entao
        x <- x + 1
      fimse

      soma <- 5 * x + 20

      escreval(" SOMA = ", soma)
      
      escreva("digite o numero inteiro :")
      leia(x)
   
   fimenquanto

Fimalgoritmo